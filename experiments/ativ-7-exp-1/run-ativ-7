#!/bin/bash

# Dependencies
# -------------------------------------------------------------------------------------------------
source <(curl -s "https://raw.githubusercontent.com/delucca/shell-functions/1.0.1/modules/feedback.sh")

EXPERIMENT_DIR_PATH=$(cd -- "$(dirname "$0")" >/dev/null 2>&1 || throw_error "It was not possible to find experiment dir" ; pwd -P)

source "${EXPERIMENT_DIR_PATH}/scripts/log.sh"

# Global arguments
# -------------------------------------------------------------------------------------------------
MAIN_NODE_IP=""
NODE_IPS=""

# Entrypoint
# -------------------------------------------------------------------------------------------------

function main() {
  parse_args $@
  launch_experiment
}

# Steps
# -------------------------------------------------------------------------------------------------

function parse_args {
  for opt in "$@"; do
    case $opt in
      -n=*|--nodes=*)
        NODE_IPS="${opt#*=}"
        shift ;;
      -m=*|--main-node-ip=*)
        MAIN_NODE_IP="${opt#*=}"
        shift ;;
      -h|--help)
        help
        exit 0
        ;;
      *)
        echo "unknown option: $opt"
        help
        exit 1
        ;;
    esac
  done
}

function launch_experiment {
  log_in_category "Experiment" "Launching experiment"

  mpirun \
    -np 2 \
    --host "${NODE_IPS}" \
    "${EXPERIMENT_DIR_PATH}/bin/launch-node" \
      "-m=${MAIN_NODE_IP}"

  log_in_category "Experiment" "Finished experiment execution"
}

# Helpers
# -------------------------------------------------------------------------------------------------

function help {
  cat << EOF
Run a Distributed DCGAN experiment
usage: $0 [OPTIONS]
    -h --help            Show this message
    -m --main-node-ip    Defines the main-node IP address
    -n --node-ips        A comma-separated list of node IPs
EOF
}

# Launch
# -------------------------------------------------------------------------------------------------

main "${@}"
